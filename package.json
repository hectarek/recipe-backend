{
  "name": "recipe-backend",
  "version": "0.1.0",
  "description": "Recipe intake pipeline service for scraping, parsing, and Notion integration.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch ./src/index.ts",
    "start": "bun ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir dist --target bun",
    "ts": "tsc --noEmit",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "biome check --write",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "recipes",
    "notion",
    "express",
    "scraper"
  ],
  "author": "Hector Gonzalez",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bun": "latest",
    "@types/cheerio": "^1.0.0",
    "husky": "^9.1.7",
    "ultracite": "6.3.2"
  },
  "dependencies": {
    "@notionhq/client": "^5.4.0",
    "cheerio": "^1.1.2",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": "latest"
  }
}
